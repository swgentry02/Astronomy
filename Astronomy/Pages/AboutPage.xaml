<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Astronomy.Pages.AboutPage"
             Title="About the App">

    <StackLayout Padding="10" Spacing="5">
        <Label Text="This app is designed to incorporate unique and often overlooked workouts into your routine." />
        <Label Text="Exercise benefits and visual instructions can be found on: https://www.muscleandfitness.com " />
        <Label Text="Click me to visit the website" TextColor="Blue" >
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnLabelClicked" />
            </Label.GestureRecognizers>
        </Label>

    </StackLayout>

</ContentPage>